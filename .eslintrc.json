{
    "env": {
        "browser": true,
        "es2019": true,
        "googleappsscript/googleappsscript": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "googleappsscript",
        "@typescript-eslint"
    ],
    "rules": {
        "no-constant-condition": 0,
        "no-empty": 0,
        "no-mixed-spaces-and-tabs": 0,
        "no-unused-vars": 0,
        "no-var": 0,
        "prefer-const":"off",
        "@typescript-eslint/no-unused-vars": 0
    }
}